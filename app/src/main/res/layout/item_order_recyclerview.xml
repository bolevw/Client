<?xml version="1.0" encoding="utf-8"?>
<com.example.administrator.client.wedgets.FixRatioFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:baseOnWidth="true"
    app:ratio="1">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tableNumTextView"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/white"
            android:text="zhuo hao :" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/itemOrderRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/itemOrderConfirmButton"
            android:layout_below="@+id/tableNumTextView"
            android:layout_weight="1"></android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/orderMoneyTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="@dimen/activity_vertical_margin"
            android:text="order money"
            android:textColor="@android:color/holo_red_light"
            android:textSize="@dimen/text_title" />

        <Button
            android:id="@+id/itemOrderConfirmButton"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:text="确认收到所有菜" />

    </LinearLayout>
</com.example.administrator.client.wedgets.FixRatioFrameLayout>