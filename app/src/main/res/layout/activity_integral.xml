<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_background_white"
    android:orientation="vertical">


    <include layout="@layout/global_include_toolbar" />


    <TextView
        android:id="@+id/allMoneyTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/ic_text_integral"
        android:paddingBottom="8dp"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingTop="8dp"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_normal" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/integralRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/integralRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>